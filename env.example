# SIP AI Agent Configuration
# Copy this file to .env and configure your settings

# SIP Configuration
SIP_DOMAIN=your-sip-domain.com
SIP_USER=your-sip-username
SIP_PASS=your-sip-password
SIP_SRTP_ENABLED=false
SIP_JITTER_BUFFER_SIZE=100

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
AGENT_ID=your-agent-id
OPENAI_MODE=legacy
OPENAI_MODEL=gpt-4
OPENAI_VOICE=alloy
OPENAI_TEMPERATURE=0.7
SYSTEM_PROMPT=You are a helpful AI assistant for SIP calls.

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FRAME_DURATION=20
AUDIO_BACKPRESSURE_THRESHOLD=1000

# RTP Configuration
RTP_START_PORT=16000
RTP_END_PORT=16100

# Monitoring Configuration
MONITOR_HOST=0.0.0.0
MONITOR_PORT=8080
MONITOR_LOG_LEVEL=INFO

# Observability Configuration
METRICS_ENABLED=true
STRUCTURED_LOGGING=true
HEALTH_CHECK_INTERVAL=30

# Web UI Configuration
WEB_UI_ENABLED=true
WEB_UI_HOST=0.0.0.0
WEB_UI_PORT=8080

# Security Configuration (change in production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
SESSION_SECRET=your-secret-key-here

# Note: Database and Redis are not currently used in this version
# The application uses in-memory storage for sessions and call history